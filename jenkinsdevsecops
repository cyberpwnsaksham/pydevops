pipeline {
    agent any
    environment {
        dockerImage = 'my-py-app'
        registry = 'bsaksham/pydevops:devsecops'
        registryCredential = 'dockerhub'
    }
    stages {
        stage('Build py') {
            steps {
                script {
                        bat 'start /b python app.py'
                }
            }
        }
        stage('Test py') {
            steps {
                script {
                    bat "py -m pytest"
                }
            }
        }
        stage('Snyk SCA Test') 
        {
                 steps {
                    echo 'Testing...'
                    snykSecurity(
                    severity: 'high', snykInstallation: 'snyk@latest', snykTokenId: 'SNYK_TOKEN',
                        )

                      } 
        }
        stage('Fortify SAST Test') 
        {
                 steps {
fortifyScan addJVMOptions: '', addOptions: '', buildID: 'pyproj', customRulepacks: '', logFile: '', maxHeap: '', resultsFile: 'pyprojresults.fpr'
                      }
        }
        stage('Building a Docker Image')
        {
            steps {
                script {
                    dockerImage = docker.build registry
                        }
                  }
        }
                        stage('Snyk Container Image Test') 
        {
                 steps {
                     catchError {
                bat 'snyk container test bsaksham/pydevops:devsecops'
                      }
                 }
        }
        stage('Pushing the image to HUB')
            {
                steps {
                    script {
                    docker.withRegistry('', registryCredential) 
                            {
                            dockerImage.push()
                            }
                        }
                    }

        }
        stage('Deploying to LocalHost')
            {
                steps {
                    bat 'docker run -d -p 9020:5000 bsaksham/dotnetwebapp:third'
                        }
        }
        stage('Fortify DAST scan') 
        {
                 steps {
                     catchError {
                bat 'snyk container test bsaksham/dotnetwebapp:third'
                      }
                 }
}
    }
}
